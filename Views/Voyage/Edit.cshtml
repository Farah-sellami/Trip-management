@model HappyTrip.Models.Voyage

@{
    ViewData["Title"] = "Edit";
}

<center style="color:coral">
    <h1>Edit Voyage</h1>
</center>
<hr />
<div class="row" style="background-color:aliceblue">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idVoyage" />
            <div class="form-group">
                <label asp-for="DateDep" class="control-label"></label>
                <input asp-for="DateDep" class="form-control" />
                <span asp-validation-for="DateDep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateRetour" class="control-label"></label>
                <input asp-for="DateRetour" class="form-control" />
                <span asp-validation-for="DateRetour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idAutobus" class="control-label"></label>
                <select asp-for="idAutobus" class="form-control" asp-items="ViewBag.idAutobus"></select>
                <span asp-validation-for="idAutobus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idChauffeur" class="control-label"></label>
                <select asp-for="idChauffeur" class="form-control" asp-items="ViewBag.idChauffeur"></select>
                <span asp-validation-for="idChauffeur" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="idExcur" class="control-label"></label>
                <select asp-for="idExcur" class="form-control" asp-items="ViewBag.idExcur"></select>
                <span asp-validation-for="idExcur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
