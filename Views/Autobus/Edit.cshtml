@model HappyTrip.Models.Autobus

@{
    ViewData["Title"] = "Edit";
}

<center style="color:coral">
    <h1>Edit Autobus</h1>
</center>
<hr />
<div class="row" style="background-color:aliceblue">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idAutobus" />
            <div class="form-group">
                <label asp-for="matricule" class="control-label"></label>
                <input asp-for="matricule" class="form-control" />
                <span asp-validation-for="matricule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="capacite" class="control-label"></label>
                <input asp-for="capacite" class="form-control" />
                <span asp-validation-for="capacite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
